{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    "biome.json",
    "packages/tsconfig/**"
  ],
  "tasks": {
    "build:dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "verify-types": {},
    "lint": {},
    "build:api": {
      "dependsOn": ["@repo/api#lint", "@repo/api#build:dev"],
      "cache": true,
      "inputs": ["apps/api/**", "!apps/api/dist/**"],
      "outputs": ["apps/api/dist/**"]
    },
    "generate:sdk": {
      "dependsOn": ["@repo/api-client#build:dev"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["build:dev"],
      "cache": false,
      "persistent": true
    },
    "prod": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    }
  }
}
