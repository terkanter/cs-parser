{
  "name": "@repo/prisma",
  "version": "1.0.0",
  "description": "Prisma schema and client for the application",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "prisma": "^6.0.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist"
  ]
}
