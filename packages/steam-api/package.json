{
  "name": "@repo/steam-api",
  "description": "Steam API",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts",
    "build:dev": "hash-runner",
    "clean": "rm -rf .turbo node_modules dist",
    "lint": "biome check --write --unsafe src && biome format src --write && biome lint src --fix",
    "verify-types": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "1.44.1",
    "@repo/api-core": "workspace:*",
    "@repo/api-errors": "workspace:*",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "hash-runner": "2.0.1",
    "tsup": "8.5.0"
  }
}
