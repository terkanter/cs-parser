    "@loglayer/transport-pretty-terminal": "^4.0.1",
    "loglayer": "6.7.0"
  },
  "devDependencies": {
    "@types/sprintf-js": "1.1.4",
    "@repo/tsconfig": "workspace:*",
    "ajv": "8.17.1",
